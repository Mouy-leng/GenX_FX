# .env.example
# Copy this file to .env and fill in your actual credentials.
# Do not commit your .env file to git.

# ==================================
# CORE APPLICATION SETTINGS
# ==================================
# A long, random string used for signing sessions and other security purposes.
# Generate one with: openssl rand -hex 32
SECRET_KEY=

# The logging level for the application.
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# The environment mode.
# Options: development, production
NODE_ENV=production

# The port the main API service will run on.
PORT=8000


# ==================================
# DATABASES & CACHING
# ==================================
# It's recommended to set the password variables below and use the connection URLs as is.

# --- PostgreSQL ---
# The password for the PostgreSQL database user.
DB_PASSWORD=
# The full connection string for PostgreSQL.
DATABASE_URL=postgresql://genx_user:${DB_PASSWORD}@postgres:5432/genx_trading

# --- MongoDB ---
# The password for the MongoDB user.
MONGO_PASSWORD=
# The full connection string for MongoDB.
MONGODB_URL=mongodb://mongo:27017/genx_trading

# --- Redis ---
# The password for the Redis instance.
REDIS_PASSWORD=
# The full connection string for Redis.
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379


# ==================================
# API KEYS & TOKENS
# ==================================

# --- Deployment & Management ---
# GitHub Personal Access Token for API access and deployments.
GITHUB_TOKEN=
# Heroku API Token for Heroku deployments (if applicable).
HEROKU_TOKEN=

# --- AMP System ---
# Authentication token for the AMP system.
AMP_TOKEN=

# --- Brokers & Exchanges ---
# ByBit API credentials.
BYBIT_API_KEY=
BYBIT_API_SECRET=

# FXCM API credentials.
FXCM_API_KEY=
FXCM_SECRET_KEY=
FXCM_API_TOKEN=
FXCM_URL=https://api-fxpractice.fxcm.com
FXCM_SOCKET_URL=wss://api-fxpractice.fxcm.com/socket.io/

# --- AI / Large Language Models ---
# Google Gemini API Key.
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=2048
GEMINI_RATE_LIMIT_RPM=30
# OpenAI API Key.
OPENAI_API_KEY=

# --- News & Data Providers ---
ALPHA_VANTAGE_API_KEY=
NEWS_API_KEY=


# ==================================
# MESSAGING & NOTIFICATIONS
# ==================================
DISCORD_TOKEN=
TELEGRAM_TOKEN=


# ==================================
# MONITORING
# ==================================
# Password for the Grafana admin user.
GRAFANA_PASSWORD=