# GenX FX AI Trading Platform - Environment Variables
# Copy this file to .env and fill in your credentials.

# =======================================
# Core System Configuration
# =======================================
# The environment your application is running in (e.g., development, production)
NODE_ENV=production
# Secret key for signing JWTs and other sensitive data
JWT_SECRET_KEY=
# Logging level (e.g., DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
# Enable or disable debug mode
DEBUG=false

# =======================================
# API Server Configuration
# =======================================
# Port for the main API server
API_PORT=8000

# =======================================
# Database Credentials
# =======================================
# PostgreSQL Database
POSTGRES_DB=amp_trading
POSTGRES_USER=amp_user
POSTGRES_PASSWORD=
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis
REDIS_PASSWORD=
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# =======================================
# Trading Platform Credentials
# =======================================
# FXCM
FXCM_USERNAME=
FXCM_PASSWORD=
FXCM_CONNECTION_TYPE=Demo
FXCM_URL=www.fxcorporate.com/Hosts.jsp
FXCM_API_TOKEN=
