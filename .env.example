# =============================================================================
# GenX FX Trading System - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# =============================================================================
# üîê SECURITY & API KEYS
# =============================================================================
SECRET_KEY=your-super-secret-key-here-minimum-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# üè¶ EXNESS BROKER CONFIGURATION
# =============================================================================
# Your Exness account credentials
EXNESS_LOGIN=your_exness_account_number
EXNESS_PASSWORD=your_exness_password
EXNESS_SERVER=Exness-MT5Trial8
EXNESS_ACCOUNT_TYPE=demo
EXNESS_TERMINAL=MT5

# =============================================================================
# üìä TRADING CONFIGURATION
# =============================================================================
# Trading parameters
MT5_SYMBOL=XAUUSD
MT5_TIMEFRAME=TIMEFRAME_M15
EA_MAGIC_NUMBER=12345
EA_DEFAULT_LOT_SIZE=0.01
EA_MAX_RISK_PER_TRADE=0.02

# =============================================================================
# üåê NETWORK & COMMUNICATION
# =============================================================================
# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# EA Communication
EA_SERVER_HOST=localhost
EA_SERVER_PORT=5000

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database (for Heroku, this will be set automatically)
DATABASE_URL=postgresql://username:password@localhost:5432/genx_trading

# Redis Cache (for Heroku, this will be set automatically)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# üìà FXCM DATA PROVIDER (Alternative to Exness)
# =============================================================================
# FXCM API credentials (optional)
FXCM_API_KEY=your_fxcm_api_key
FXCM_API_SECRET=your_fxcm_api_secret
FXCM_ACCOUNT_ID=your_fxcm_account_id

# =============================================================================
# ü§ñ AI MODEL CONFIGURATION
# =============================================================================
# Model parameters
MODEL_CONFIDENCE_THRESHOLD=0.7
SIGNAL_UPDATE_INTERVAL=300
MAX_SIGNALS_PER_HOUR=10

# =============================================================================
# üìä LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/genx-trading/app.log

# =============================================================================
# ‚òÅÔ∏è CLOUD DEPLOYMENT
# =============================================================================
# Heroku specific
PORT=8000
NODE_ENV=production

# Google Cloud specific
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_ZONE=us-central1-a

# VPS Configuration
VPS_PUBLIC_IP=your-vps-ip-address

# =============================================================================
# üîß DEVELOPMENT SETTINGS
# =============================================================================
# Set to true for development, false for production
DEBUG=false
ENVIRONMENT=production

# =============================================================================
# üì± NOTIFICATIONS (Optional)
# =============================================================================
# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# =============================================================================
# üéØ TRADING STRATEGIES
# =============================================================================
# Gold trading specific
GOLD_CONFIDENCE_THRESHOLD=0.75
GOLD_MAX_POSITION_SIZE=0.1
GOLD_STOP_LOSS_PIPS=50
GOLD_TAKE_PROFIT_PIPS=100

# Forex trading specific
FOREX_CONFIDENCE_THRESHOLD=0.7
FOREX_MAX_POSITION_SIZE=0.05
FOREX_STOP_LOSS_PIPS=30
FOREX_TAKE_PROFIT_PIPS=60

# =============================================================================
# üîÑ AUTO-SCALING & PERFORMANCE
# =============================================================================
# Performance tuning
MAX_CONCURRENT_TRADES=5
SIGNAL_CACHE_TTL=300
DATABASE_POOL_SIZE=10
REDIS_POOL_SIZE=5

# =============================================================================
# üõ°Ô∏è SECURITY SETTINGS
# =============================================================================
# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# =============================================================================
# üìä MONITORING & ALERTS
# =============================================================================
# Health check settings
HEALTH_CHECK_INTERVAL=30
ALERT_EMAIL=admin@your-domain.com

# Performance monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
