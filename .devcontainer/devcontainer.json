{
  "name": "IntelliJ IDEA Development Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "VARIANT": "17-jdk-bullseye"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "installMaven": "true",
      "installGradle": "true"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "redhat.java",
        "vscjava.vscode-maven",
        "vscjava.vscode-gradle",
        "ms-python.python",
        "ms-vscode.vscode-typescript-next"
      ]
    }
  },
  "forwardPorts": [
    8080,
    3000,
    5000,
    9000
  ],
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "bash .devcontainer/post-start.sh",
  "remoteUser": "vscode",
  "mounts": [
    "source=${localEnv:HOME}/.m2,target=/home/vscode/.m2,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.gradle,target=/home/vscode/.gradle,type=bind,consistency=cached"
  ],
  "containerEnv": {
    "INTELLIJ_HOME": "/opt/intellij-idea-ultimate",
    "JAVA_HOME": "/usr/local/sdkman/candidates/java/current",
    "MAVEN_HOME": "/usr/local/sdkman/candidates/maven/current",
    "GRADLE_HOME": "/usr/local/sdkman/candidates/gradle/current"
  },
  "runArgs": [
    "--privileged",
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp:unconfined"
  ]
}