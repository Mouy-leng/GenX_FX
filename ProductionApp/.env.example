# Server Configuration
PORT=3000
NODE_ENV=development

# Domain Configuration (Update with your domain from Namecheap)
DOMAIN=localhost
APP_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/productionapp
DB_NAME=productionapp

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12

# SSL/HTTPS (Set to true in production with valid SSL certificate)
SSL_ENABLED=false

# Production Environment Variables
# Uncomment and configure for production deployment:
# NODE_ENV=production
# DOMAIN=your-domain.com
# APP_URL=https://your-domain.com
# API_URL=https://api.your-domain.com
# CORS_ORIGIN=https://your-domain.com
# SSL_ENABLED=true
# MONGODB_URI=mongodb://mongo:27017/productionapp
# JWT_SECRET=GENERATE_WITH_CRYPTO_RANDOM_BYTES_64_CHARS