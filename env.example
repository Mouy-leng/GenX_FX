# GenX FX Trading System Environment Configuration
# Copy this file to .env and update with your actual values

# System Configuration
NODE_ENV=development
PYTHON_VERSION=3.11
PORT=8000
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_DB=genx_fx
POSTGRES_USER=genx_user
POSTGRES_PASSWORD=genx_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Trading Configuration
TRADING_SYMBOLS=EURUSD,GBPUSD,USDJPY,USDCHF,AUDUSD,USDCAD,NZDUSD
TRADING_TIMEFRAMES=M15,H1,H4,D1
PRIMARY_TIMEFRAME=H1
SIGNAL_INTERVAL=300

# FXCM Configuration
FXCM_USE_MOCK=true
FXCM_USERNAME=your_fxcm_username
FXCM_PASSWORD=your_fxcm_password
FXCM_ENVIRONMENT=demo

# AI Models Configuration
AI_ENSEMBLE_SIZE=5
AI_CONFIDENCE_THRESHOLD=0.75
AI_RETRAIN_INTERVAL=86400

# Risk Management
MAX_RISK_PER_TRADE=0.02
MAX_DAILY_RISK=0.05
STOP_LOSS_MULTIPLIER=1.5
TAKE_PROFIT_MULTIPLIER=2.0

# Output Configuration
OUTPUT_DIRECTORY=signal_output
EXCEL_FILENAME=genx_signals.xlsx
MT4_FILENAME=MT4_Signals.csv
MT5_FILENAME=MT5_Signals.csv

# System Information
SYSTEM_NAME=GenX FX Trading System
SYSTEM_VERSION=1.0.0

# API Keys (Optional)
GEMINI_API_KEY=your_gemini_api_key
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=GenX-FX-Trading-Bot

# Notification Services (Optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
