rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // GenX FX Trading Platform Storage Rules
    
    // User trading reports - users can only access their own files
    match /users/{userId}/reports/{allPaths=**} {
      allow read, write: if request.auth != null && 
                            request.auth.uid == userId;
    }
    
    // Trading signals exports - authenticated users can read
    match /exports/signals/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                      request.auth.token.admin == true;
    }
    
    // Market data files - authenticated users can read
    match /market_data/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                      request.auth.token.admin == true;
    }
    
    // System backups - admin only
    match /backups/{fileName} {
      allow read, write: if request.auth != null && 
                            request.auth.token.admin == true;
    }
    
    // Public assets - anyone can read
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                      request.auth.token.admin == true;
    }
  }
}